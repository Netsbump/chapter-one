{
  "name": "chapter-one",
  "displayName": "Chapter One",
  "description": "A cozy light theme with soft paper tones and pink touches.",
  "version": "1.1.0",
  "publisher": "nenets",
  "icon": "images/logo-chapter-one.png",
  "galleryBanner": {
    "color": "#f2c4cb",
    "theme": "light"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Netsbump/chapter-one"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Themes"
  ],
  "keywords": [
    "theme",
    "light theme",
    "e-reader",
    "sepia",
    "typewriter"
  ],
  "contributes": {
    "themes": [
      {
        "label": "Chapter One",
        "uiTheme": "vs",
        "path": "./themes/Chapter One-color-theme.json"
      }
    ], 
    "configurationDefaults": {
      "[Chapter One]": {
        "editor.fontFamily": "Fira Code, monospace",
        "editor.fontLigatures": true,
        "editor.fontSize": 14,
        "editor.lineHeight": 22
      }
    }
  },
  "license": "MIT"
}
